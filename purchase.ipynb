        "\n",
        "# Opening files.\n",
        "with open(\"record.json\", 'r') as files:\n",
        "  record = json.load(files)\n",
        "\n",
        "with open(\"sales.json\", \"r\") as sale:\n",
        "  sales = json.load(sale)"
